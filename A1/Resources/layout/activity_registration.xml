<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:contentDescription="RegistrationPage">
    <ImageView
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgLogoReg"        
        android:layout_marginTop="@dimen/margin_medium"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/frame_layout"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="@string/registration"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:minWidth="@dimen/min_width"
            android:minHeight="@dimen/min_height"
            android:textAlignment="center"
            android:id="@+id/txtTitleReg"
            android:textSize="@dimen/text_sz_extra_large"/>

        <EditText
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"            
            android:id="@+id/txtFirstNameReg"
            android:layout_marginTop="@dimen/margin_large"
            android:hint = "@string/firstName"
            android:background="@drawable/editTextBackground"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:textSize="@dimen/text_sz_large"/>
        <EditText
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:id="@+id/txtLastNameReg"
            android:layout_marginTop="@dimen/margin_small"           
            android:hint = "@string/lastName"
            android:background="@drawable/editTextBackground"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:textSize="@dimen/text_sz_large"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2">
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/selectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/min_height"
                android:minHeight="@dimen/min_width"
                android:id="@+id/txtSelectDate"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/colorClickAble"
            />
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/min_height"
                android:minHeight="@dimen/min_width"
                android:id="@+id/txtDoB"
                android:layout_marginLeft="@dimen/margin_medium"
				android:layout_marginTop="@dimen/margin_small"
            />

        </LinearLayout>
        <EditText
            android:inputType="phone"
            android:layout_width="match_parent"            
            android:id="@+id/txtPhoneNumber"
            android:hint="@string/phoneNumber"
            android:background="@drawable/edittextbackground"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_height="@dimen/layout_height"
        />
        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:id="@+id/txtEmailReg"       
            android:hint = "@string/email"
            android:background="@drawable/editTextBackground"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
        />
        <EditText
            android:inputType="text"
            android:layout_width="match_parent"
            android:id="@+id/txtAddress"
            android:hint="@string/address"
            android:background="@drawable/edittextbackground"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_height="@dimen/layout_height"
        />
        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:id="@+id/txtPasswordReg"
            android:layout_marginTop="@dimen/margin_small"
            android:hint = "@string/password"
            android:background="@drawable/editTextBackground"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:textSize="@dimen/text_sz_large"
            />
        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:id="@+id/txtConfirmPasswordrdReg"
            android:layout_marginTop="@dimen/margin_small"
            android:hint = "@string/confirmPassword"
            android:background="@drawable/editTextBackground"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:textSize="@dimen/text_sz_large"
            />
        <Button
            android:text="@string/signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignUp"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:backgroundTint="@color/colorClickAble"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_sz_large"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:text="@string/login"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLoginReg"
        android:gravity="center"
        android:textColor="@color/colorClickAble"
        android:layout_marginTop="@dimen/margin_small"
        />
</LinearLayout>
