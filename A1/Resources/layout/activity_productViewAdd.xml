<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <include
        layout="@layout/header" />
    <LinearLayout
        android:id="@+id/linearLayoutProductPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:orientation="vertical"
        >
        <TextView
            android:gravity="left"
            android:text="@string/productPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/min_width"
            android:minHeight="@dimen/min_height"
            android:id="@+id/txtProductPage" 
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:textSize="@dimen/text_sz_medium"     
            android:textColor="@android:color/holo_blue_light"
            />

     <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageButton
            android:contentDescription="@string/productImageSmall"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/imgbtnProductView"
            android:layout_marginTop="@dimen/margin_extra_large"
            />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtProductName"
            android:text="@string/productName"
            android:textSize="@dimen/text_sz_extra_large"            
            android:layout_marginTop="@dimen/margin_small" />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtProductPrice"
            android:text="@string/productPrice"
            android:textSize="@dimen/text_sz_title"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_small"/>
            <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtProductDesc"
            android:text="@string/productDesc"
            android:textSize="@dimen/text_sz_extra_large"
            android:layout_marginTop="@dimen/margin_small"
        />
            <Button
            android:text="@string/buyNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnBuyNow"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:backgroundTint="@color/colorClickAble"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_sz_large"
            android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</LinearLayout>
