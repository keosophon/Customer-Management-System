<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">
    <ImageView
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgLogoLogIn"
        android:layout_marginTop="@dimen/margin_extra_large"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/frame_layout">
        <TextView
            android:text="@string/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/min_width"
            android:minHeight="@dimen/min_height"
            android:textAlignment="center"
            android:id="@+id/txtTitleLogIn"
            android:textSize="@dimen/text_sz_title"/>
        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:id="@+id/txtEmailLog"
            android:layout_marginTop="@dimen/margin_medium"
            android:hint = "@string/email"
            android:background="@drawable/editTextBackground"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:textSize="@dimen/text_sz_large"
            />

        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:id="@+id/txtPassowrdLog"
            android:layout_marginTop="@dimen/margin_large"
            android:hint = "@string/password"
            android:background="@drawable/editTextBackground"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:textSize="@dimen/text_sz_large"
            />
        <Button
            android:text="@string/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:backgroundTint="@color/colorClickAble"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_sz_large"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:minWidth="@dimen/min_width"
        android:minHeight="@dimen/min_height"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center_horizontal"
        >
        <TextView
            android:text="@string/newUser"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/min_width"
            android:minHeight="@dimen/min_height"
            android:id="@+id/txtNoAccount" 
            android:textAlignment="center"
            android:textSize="@dimen/text_sz_medium"
            android:layout_marginTop="@dimen/margin_large"
        />
        <TextView
            android:text="@string/registerNow"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/min_width"
            android:minHeight="@dimen/min_height"
            android:id="@+id/txtRegisterNow" 
            android:layout_marginLeft="@dimen/margin_small"
            android:textColor="@color/colorClickAble"
            android:layout_marginTop="@dimen/margin_large"
        />
    </LinearLayout>    
</LinearLayout>