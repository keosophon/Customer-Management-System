<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">
    <ImageView
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgLogoLogIn"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip" 
        android:layout_marginTop="40dip"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/frame_layout">

        <TextView
            android:text="@string/login"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:textAlignment="center"
            android:id="@+id/txtTitleLogIn"/>

        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/txtEmail"
            android:layout_marginTop="25dip"
            android:layout_marginBottom="5dip"
            android:hint = "@string/email"
            android:background="@drawable/editTextBackground"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"/>

        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/txtPassowrd"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="10dip"
            android:hint = "@string/password"
            android:background="@drawable/editTextBackground"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"/>


        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="41.5dp"
            android:layout_marginTop="5.0dp"
            android:layout_marginLeft="5dip"
            android:id="@+id/linearLayout1">

            <CheckBox
                android:text="@string/rememberMe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/cbRemember"
                android:textSize="35px"
                android:textColor="@color/colorGrey"/>
            <TextView
                android:text="@string/forgotPassword"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtForgotPassword"
                android:textColor="@color/colorClickAble"
                android:layout_marginTop="8dip"
                android:layout_marginLeft="35dip"
                android:cursorVisible="True">
            </TextView>
        </LinearLayout>
        <Button
            android:text="@string/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:backgroundTint="@color/colorClickAble"
            android:textColor="#FFFFFF"
            android:textSize="35px"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginTop="15dip"
        android:gravity="center_horizontal"
        >
        <TextView
            android:text="@string/newUser"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="69.0dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/txtNoAccount" 
            android:textAlignment="center"
        />
        <TextView
            android:text="@string/registerNow"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="69.0dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/txtRegisterNow" 
            android:layout_marginLeft="10dip"
            android:textColor="@color/colorClickAble"
        />
    </LinearLayout>    
</LinearLayout>