<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <include
        layout="@layout/header" />
    <include
        layout="@layout/header1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:orientation="horizontal">
        <ImageButton
            android:contentDescription="@string/productImageSmall"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/imgbtnProductSmall"
            android:layout_marginTop="@dimen/margin_extra_large"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_medium">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtProductDescCart"
                android:text="@string/productDesc"
                android:textSize="@dimen/text_sz_large"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_extra_large"
        />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtProductPrice"
                android:text="@string/productPrice"
                android:textStyle="bold"
                android:textSize="@dimen/text_sz_large"
                android:layout_marginTop="@dimen/margin_extra_large"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtQty"
                    android:text="@string/qty"
                    android:textSize="@dimen/text_sz_large"
                    android:layout_marginTop="@dimen/margin_extra_large"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spQuantity"
                    android:layout_marginTop="@dimen/margin_extra_large"
                    android:layout_marginLeft="@dimen/margin_small"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDiscount"
                    android:text="@string/discountApplied"
                    android:textSize="@dimen/text_sz_large"
                    android:layout_marginTop="@dimen/margin_extra_large"/>
                <CheckBox
                    android:text="@string/seniorAbout60"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbSenior" />

                <CheckBox
                    android:text="@string/cities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbCities" />

                <CheckBox
                    android:text="@string/weekends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbWeekends" />
                
            </LinearLayout>
            
            <Button
                android:text="@string/addToCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addToCart"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_extra_large"
                android:backgroundTint="@color/colorClickAble"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_sz_large"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>