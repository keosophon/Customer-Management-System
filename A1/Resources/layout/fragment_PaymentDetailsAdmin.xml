<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/frame_layout"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/txtOrderSearchPaymentAdmin"
                android:textSize="@dimen/text_sz_medium"
                android:hint="@string/orderSearch"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:background="@drawable/edittextbackground"
                android:layout_marginRight="@dimen/margin_small"
                />
            <Button
                android:text="@string/search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"                
                android:id="@+id/btnOrderSearchPaymentAmdin"
                android:backgroundTint="@color/colorClickAble"
                android:layout_marginRight="@dimen/margin_small"/>
            <Button
                android:text="@string/clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"                
                android:id="@+id/btnClearFormPaymentAdmin"
                android:backgroundTint="@color/colorClickAble"
                android:layout_marginRight="@dimen/margin_small"/>
        </LinearLayout>
        <View
            android:id="@+id/divider8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_medium"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout1OrderAdmin"
            android:layout_marginTop="@dimen/margin_small">
            <TextView
                android:text="@string/orderDetail"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/min_width"
                android:minHeight="@dimen/min_height"
                android:textAlignment="center"
                android:id="@+id/txtTitleOrderAdmin"
                android:textSize="@dimen/text_sz_extra_large"
            
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"                
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/customerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/min_width"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:textSize="@dimen/text_sz_medium"   
                
                    />
                    <EditText
                        android:inputType="text"
                        android:layout_width="match_parent"                       
                        android:layout_height="@dimen/layout_height"
                        android:id="@+id/txtCustomerNameAdmin"
                        android:background="@drawable/editTextBackground"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_small"
                        android:textSize="@dimen/text_sz_large"
                        android:layout_marginTop="@dimen/margin_small"
                        android:editable="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/orderDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/min_width"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:textSize="@dimen/text_sz_medium"            
                    />
                    <EditText
                        android:inputType="datetime"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height"
                        android:id="@+id/txtOrderDatePaymentAdmin"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/editTextBackground"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_small"
                        android:textSize="@dimen/text_sz_large"
                        android:editable="false"
                    />
                </LinearLayout>
                
            </LinearLayout>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/min_width"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:textSize="@dimen/text_sz_medium"            
                    />
                    <EditText
                        android:inputType="numberDecimal"
                        android:layout_width="@dimen/fixed_width"
                        android:id="@+id/txtOrderDiscountPaymentAdmin"
                        android:background="@drawable/edittextbackground"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_height="@dimen/layout_height"
                        android:textSize="@dimen/text_sz_large"
                        android:editable="false"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/paymentMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/min_width"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:textSize="@dimen/text_sz_medium"            
                    />
                    <EditText
                        android:inputType="numberDecimal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height"
                        android:id="@+id/txtOrderPaymentAdmin"
                        android:background="@drawable/editTextBackground"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_small"
                        android:textSize="@dimen/text_sz_large"
                        android:editable="false"
                    />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:text="@string/product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/min_width"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:textSize="@dimen/text_sz_medium"            
            />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollViewAdmin">
                <GridLayout
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemGridPaymentAdmin"
                    android:layout_marginTop="@dimen/margin_medium">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/item"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/txtItemPaymentAdmin"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textSize="@dimen/text_sz_medium"
                        android:layout_marginRight="@dimen/margin_extra_large"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qty"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/txtQtyPaymentAdmin"
                        android:layout_row="0"
                        android:layout_column="1"                        
                        android:layout_marginRight="@dimen/margin_medium"
                        android:textSize="@dimen/text_sz_medium"
                        android:gravity="end"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/txtRemovePamentAdmin"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_marginRight="@dimen/margin_medium"
                        android:textSize="@dimen/text_sz_medium"
                        android:gravity="end"
                        />
                </GridLayout>
            </ScrollView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_small">
            
            <Button
                android:text="@string/deleteProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDeleterOrderPaymentAdmin"
                android:layout_marginRight="@dimen/margin_small"
                android:backgroundTint="@color/colorClickAble"/>
            <Button
                android:text="@string/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnUpdateOrderPaymentAdmin"
                android:layout_marginRight="@dimen/margin_small"
                android:backgroundTint="@color/colorClickAble"/>
            <Button
                android:text="@string/logOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnLogOutPaymentAdmin"
                android:backgroundTint="@color/colorClickAble"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
