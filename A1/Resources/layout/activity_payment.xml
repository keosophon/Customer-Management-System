<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <include
        layout="@layout/header" />
    <LinearLayout
        android:id="@+id/linearLayoutPaymentPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:orientation="vertical"
        >
        <TextView
            android:gravity="left"
            android:text="@string/paymentPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/min_width"
            android:minHeight="@dimen/min_height"
            android:id="@+id/txtAddToCartPage" 
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_small"
            android:textSize="@dimen/text_sz_medium"     
            android:textColor="@android:color/holo_blue_light"
            />
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"        
        android:layout_marginRight="@dimen/margin_small">      
        <TextView
            android:text="@string/orderSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtOrderSummary"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_sz_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:textStyle="bold"/>
        <ScrollView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView1" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"                
                >
                <GridLayout
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemGrid"
                    android:layout_marginTop="@dimen/margin_medium">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/item"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/txtItem"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textSize="@dimen/text_sz_medium"
                        android:layout_marginRight="@dimen/margin_extra_large"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qty"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/txtQtyPayment"
                        android:layout_row="0"
                        android:layout_column="1"                        
                        android:layout_marginRight="@dimen/margin_medium"
                        android:textSize="@dimen/text_sz_medium"
                        android:gravity="end"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unitPrice"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/txtUnitPrice"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_marginRight="@dimen/margin_medium"
                        android:textSize="@dimen/text_sz_medium"
                        android:gravity="end"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subTotal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:id="@+id/txtSubTotal"
                        android:layout_row="0"
                        android:layout_column="3"                        
                        android:textSize="@dimen/text_sz_medium"
                        android:gravity="end"
                        />
                </GridLayout>
                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/subTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/txtSubTotal1" 
                        android:textSize="@dimen/text_sz_medium"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_small"
                    />
                    <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/txtSubTotalValue" 
                        android:textSize="@dimen/text_sz_medium"
                        android:gravity="end"
                        android:layout_marginRight="@dimen/margin_extra_large"
                    />
                </LinearLayout>
                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@id/txtDiscount" 
                        android:textSize="@dimen/text_sz_medium"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_small"
                    />
                    <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/txtDiscountValue" 
                        android:textSize="@dimen/text_sz_medium"
                        android:gravity="end"
                        android:layout_marginRight="@dimen/margin_extra_large"
                    />
                </LinearLayout>      
                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/deliveryCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/txtDeliveryCharge" 
                        android:textSize="@dimen/text_sz_medium"
                        android:layout_marginLeft="@dimen/margin_medium"
                    />
                    <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/txtDeliveryChargeValue" 
                        android:textSize="@dimen/text_sz_medium"
                        android:gravity="end"
                        android:layout_marginRight="@dimen/margin_extra_large"
                    />
                </LinearLayout>
                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/txtTotal" 
                        android:textSize="@dimen/text_sz_medium"
                        android:layout_marginLeft="@dimen/margin_medium"
                    />
                    <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/txtTotalValue" 
                        android:textSize="@dimen/text_sz_medium"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:layout_marginRight="@dimen/margin_extra_large"
                    />
                </LinearLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_extra_large"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDelivery"
                android:text="@string/delivery"
                android:textSize="@dimen/text_sz_large"                
                android:layout_marginTop="@dimen/margin_medium"/>
            <RadioGroup
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdDelivery"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal"
                >
                <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/courier"
                android:id="@+id/rdCourier" />
                <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pickup"
                android:id="@+id/rdPickup" />
            </RadioGroup>
        </LinearLayout>
        <TextView
            android:text="@string/courierCharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtNote"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"/>        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPaymentMode"
                android:text="@string/paymentMode"
                android:textSize="@dimen/text_sz_large"                
                android:layout_marginTop="@dimen/margin_medium"/>
            <RadioGroup
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdPamentMode"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/card"
                    android:id="@+id/rdCard" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cash"
                    android:id="@+id/rdCash" />
        </RadioGroup>
    </LinearLayout>

                <Button
                    android:text="@string/checkout"
                    android:id="@+id/btnCheckOut"
                    android:backgroundTint="@color/colorClickAble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_sz_large"                    
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_gravity="center"
                />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>